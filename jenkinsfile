pipeline {
    agent any

    environment {
        IMAGE_NAME = 'node:alpine'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/cloudlumanex/Learn-CICD-using-jenkins-on-docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME:latest .'
            }
        }

        

        stage('Deploy') {
            steps {
                sh 'docker run -d -p 3000:3000 $IMAGE_NAME:latest'
            }
        }
    }
}
